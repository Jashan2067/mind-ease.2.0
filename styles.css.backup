}

.memory-card {
  background: var(--bg-light);
  height: 90px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.6em;
  cursor: pointer;
  user-select: none;
  box-shadow: var(--shadow-light);
}

.memory-card.flipped {
  background: var(--secondary-color);
  color: var(--surface-color);
}

.doodle-canvas {
  border-radius: 8px;
  width: 100%;
  max-width: 100%;
  background: #fff;
  box-shadow: var(--shadow-light);
  border: 1px solid rgba(0, 0, 0, 0.04);
}

.game-controls {
  display: flex;
  gap: 10px;
  margin-top: 10px;
  justify-content: center;
}

.games-close-row {
  margin-top: 12px;
  text-align: center;
}

/* Zen Garden styles */
.zen-canvas {
  border-radius: 8px;
  width: 100%;
  max-width: 100%;
  background: linear-gradient(135deg, #f5f0e8, #e8dfd0);
  box-shadow: var(--shadow-deep);
  border: 2px solid rgba(139, 115, 85, 0.2);
  cursor: crosshair;
}

.zen-select {
  padding: 6px 10px;
  border-radius: 6px;
  border: 1px solid var(--bg-dark);
  background: var(--surface-color);
  cursor: pointer;
  font-size: 14px;
}

@media (max-width:600px) {
  .breathing-circle {
    width: 110px;
    height: 110px;
  }

  .memory-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Utility classes */
.hidden {
  display: none !important;
}